<main>
    <form class="theater-form" action="/play/{{play._id}}/edit" method="POST">
        <h1>Edit Theater</h1>
        <div>
            <label for="title">Theater Title:</label>
            <input type="text" name="title" placeholder="Theater name" value="{{play.title}}">
        </div>
        <div>
            <label for="description">Theater Description:</label>
            <textarea placeholder="Description" name="description">{{play.description}}</textarea>
        </div>
        <div>
            <label for="imageUrl">Image url:</label>
            <input type="text" name="imageUrl" placeholder="Image Url" value="{{play.imageUrl}}">
        </div>
        <div class="check">
            <input type="checkbox" name="isPublic" id="check-box" {{#if play.isPublic}}checked{{/if}}>
            <label for="check-box">Public</label>
        </div>
        <button class="btn" type="submit">Submit</button>
    </form>
</main>