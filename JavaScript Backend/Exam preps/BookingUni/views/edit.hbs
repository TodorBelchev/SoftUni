<section id="viewAddhotel">
    <h2>Edit existing hotel</h2>
    <form id="formAddhotel" action="/hotel/{{hotel._id}}/edit" method="POST">
        <label for="hotel">Hotel name:</label>
        <input type="text" id="hotel" name="hotel" value="{{hotel.name}}">
        <label for="city">City:</label>
        <input type="text" id="city" name="city" value="{{hotel.city}}">
        <label for="freeRooms">Free rooms:</label>
        <input type="number" id="freeRooms" name="freeRooms" value="{{hotel.freeRooms}}">
        <label for="imgURL">Image:</label>
        <input type="text" id="imgURL" name="imgURL" value="{{hotel.imgURL}}">
        <input type="submit" class="create" value="Add">
    </form>
</section>